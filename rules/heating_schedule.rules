// Boost 30 mins before waking up (Assuming 6:00 AM wake up)
rule "Morning Boost ON"
when
    Time cron "0 30 5 ? * MON-FRI"
then
    logInfo("Heating", "Activating Morning Floor Boost")
    Heating_Boost_Active.sendCommand(ON)
end

// Turn off Boost at wake up time
rule "Morning Boost OFF"
when
    Time cron "0 0 6 ? * MON-FRI"
then
    Heating_Boost_Active.sendCommand(OFF)
end

// Boost before getting home (Assuming 5:00 PM arrival)
rule "Evening Boost ON"
when
    Time cron "0 0 16 ? * MON-FRI" 
then
    logInfo("Heating", "Activating Evening Floor Boost")
    Heating_Boost_Active.sendCommand(ON)
end

rule "Evening Boost OFF"
when
    Time cron "0 0 17 ? * MON-FRI"
then
    Heating_Boost_Active.sendCommand(OFF)
end