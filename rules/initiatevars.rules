rule "Initialize Kick-Ass Variables"
when
    System started
then
    // Wait for MapDB to finish loading
    createTimer(now.plusSeconds(30), [|
        if(Heating_Night_Setback.state == NULL) Heating_Night_Setback.postUpdate(10)
        if(Heating_Boost_Amount.state == NULL)  Heating_Boost_Amount.postUpdate(15)
        if(Heating_Shoulder_Temp.state == NULL) Heating_Shoulder_Temp.postUpdate(85)
        if(Heating_Feedback_Gain.state == NULL) Heating_Feedback_Gain.postUpdate(3.0)
    ])
end