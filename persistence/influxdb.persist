Strategies {
    everyHour   : "0 0 * * * ?"
    everyDay    : "0 0 0 * * ?"
    everyTenMins: "0 */10 * * * ?"
    everyMinute : "0 * * * * ?"

    // default strategy
    default = everyChange
}

Items { 

    // ============================================================================
    // KICK-ASS BMS & LOGIC TRACKING (Crucial for Grafana Debugging)
    // ============================================================================
    
    // 1. The Decision Making (Logic)
    Final_Boiler_Target         : strategy = everyChange, everyMinute
    Calculated_Target_Temp      : strategy = everyChange
    Active_Curve_Type           : strategy = everyChange  // Logs strings like "High Temp Curve"
    Heating_Calc_Base           : strategy = everyChange
    Heating_Calc_Error          : strategy = everyChange
    Calculated_Feedback_Mod     : strategy = everyChange
    
    // 2. The Soft-Start "Staircase"
    Heating_SoftStart_Active    : strategy = everyChange
    Heating_SoftStart_Current   : strategy = everyChange, everyMinute
    Heating_SoftStart_Step      : strategy = everyChange
    
    // 3. The Hardware Output (What we send to Lochinvar)
    Lochinvar_Setpoint_Command  : strategy = everyChange, everyMinute
    Lochinvar_Boiler_Enable_Cmd : strategy = everyChange, everyMinute
    
    // 4. The Boiler Feedback (What Lochinvar does)
    Boiler_Firing_Rate          : strategy = everyUpdate, everyChange // Updates frequently
    Lochinvar_DeltaT            : strategy = everyChange, everyMinute
    Boiler_Status_Code          : strategy = everyChange
    Boiler_Lockout_Code         : strategy = everyChange
    
    // 5. Pumps (Crucial for checking Flow/DeltaT issues)
    Magna1_Pump                 : strategy = everyChange
    RHP                         : strategy = everyChange // Radiant Pump
    swSystemPump                : strategy = everyChange
    swRHPump                    : strategy = everyChange


    // ============================================================================
    // STANDARD HEATING GROUPS
    // ============================================================================
    gHeating_Targets* : strategy = everyChange, everyTenMins
    gLochinvar_temperatures* : strategy = everyChange, everyMinute
    gLochinvar_setpoints* : strategy = everyChange, everyTenMins
