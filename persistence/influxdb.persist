    RHZV* : strategy = everyChange, everyTenMins
    Heating* : strategy = everyChange
    
    // Specific Critical Items
    DHW_Tank_Setpoint           : strategy = everyChange
    DHW_Tank_Temperature        : strategy = everyChange, everyMinute
    System_Temp_Setpoint        : strategy = everyChange
    System_Outlet_Setpoint      : strategy = everyChange
    System_Supply_Temp          : strategy = everyChange, everyMinute
    Outdoor_Temperature         : strategy = everyChange, everyTenMins


    // ============================================================================
    // WEATHER & ENVIRONMENT
    // ============================================================================
    gWeather* : strategy = everyHour
    Weather_Current_Temperature : strategy = everyTenMins
    Temperatures* : strategy = everyMinute
    
    // MultiSensors (Battery, Motion, Temp, etc)
