	Switch Blocked_Drain_Switch	"Blocked Drain Switch" (Boiler_Switches) {modbus="Discrete_Switches:4"}
	Switch Auto_Reset_High_Limit	"Auto Reset High Limit" (Limits,Switches) {modbus="Discrete_Switches:5"}
	Switch Flame_indicator "Flame Switch" (Boiler_Switches) {modbus="Discrete_Switches:6"}
	Switch CFH1_indicator	"Call for heat Temp 1 indicator" (CFH) {modbus="Discrete_Switches:7"}
