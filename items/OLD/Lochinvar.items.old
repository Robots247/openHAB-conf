	Switch Flow_Switch	"Boiler Flow Switch" (Boiler_Switches) {modbus="Discrete_Switches:0"}
	Switch Gas_Pressure_Switch	"Gas Pressure Switch" (Boiler_Switches) {modbus="Discrete_Switches:1"}
	Switch Louver_Proving_Switch	"Louver Proving Switch" (Boiler_Switches) {modbus="Discrete_Switches:2"}
