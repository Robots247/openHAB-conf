	//Input Temps
		Number System__Temp_Setpoint	"Boiler System Setpoint" (Setpoints) {modbus="System_Temp_SP:0"}
		
		// System temp outlet
		Number System_Outlet_Setpoint	"System Outlet Setpoint" (Setpoints) {modbus="Sys_Temps:0"}
		
		Number System_Outlet_Temp	"System Outlet Temperature [%.1f °F]  " (Temperatures) {modbus="<[Sys_Temps:1:transformation=JS(MBtoF.js)]"}
		Number System_Inlet_Temp	"System Inlet Temperature [%.1f °F]" (Temperatures) {modbus="<[Sys_Temps:2:transformation=JS(MBtoF.js)]"}
		Number Boiler_flue_Temp	"Boiler Flue Temperature [%.1f °F]" (Temperatures) {modbus="<[Sys_Temps:3:transformation=JS(MBtoF.js)]"}
